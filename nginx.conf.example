# Приклад конфігурації Nginx для Next.js з підтримкою великих файлів
# Розмістіть цей файл в /etc/nginx/sites-available/your-site або додайте в основну конфігурацію

server {
    listen 80;
    server_name your-domain.com;

    # Збільшуємо обмеження розміру тіла запиту для завантаження великих файлів
    client_max_body_size 200M;
    
    # Збільшуємо таймаути для великих завантажень
    client_body_timeout 300s;
    proxy_connect_timeout 300s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;
    send_timeout 300s;

    # Буферизація для великих запитів
    client_body_buffer_size 128k;
    proxy_buffering off;
    proxy_request_buffering off;

    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Додаткові заголовки для великих файлів
        proxy_set_header Content-Length $content_length;
    }

    # Спеціальна конфігурація для API endpoint імпорту
    location /api/admin/listings/import {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Збільшені таймаути для цього endpoint
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        # Вимкнення буферизації для streaming
        proxy_buffering off;
        proxy_request_buffering off;
        
        # Збільшений розмір буфера
        client_max_body_size 200M;
        client_body_buffer_size 1M;
    }
}
